    this view was developed with the assisntace from AI tools
*@

@{
    ViewData["Title"] = "Home";
}
<section class="hero mb-5">
    <h1 class="display-6 brand-serif mb-1">Contract Monthly Claim System</h1>
    <p class="script fs-4 mb-0">simple submissions · clear reviews · visible status</p>
</section>

<div class="row g-4">
    <div class="col-md-4">
        <div class="tile h-100">
            <div class="icon-pill mb-2"><i class="bi bi-file-earmark-plus"></i></div>
            <h2 class="h5 brand-serif mb-1">Lecturer — Submit</h2>
            <p class="text-secondary">Capture hours, see the total instantly, attach supporting files.</p>
            <a class="btn btn-olive" asp-controller="Claims" asp-action="Submit"><i class="bi bi-arrow-right-short"></i> Open</a>
        </div>
    </div>
    <div class="col-md-4">
        <div class="tile h-100">
            <div class="icon-pill mb-2"><i class="bi bi-clipboard-check"></i></div>
            <h2 class="h5 brand-serif mb-1">Coordinator / Manager — Review</h2>
            <p class="text-secondary">Filter, scan, and record a decision quickly.</p>
            <a class="btn btn-olive" asp-controller="Claims" asp-action="Review"><i class="bi bi-arrow-right-short"></i> Open</a>
        </div>
    </div>
    <div class="col-md-4">
        <div class="tile h-100">
            <div class="icon-pill mb-2"><i class="bi bi-search"></i></div>
            <h2 class="h5 brand-serif mb-1">Track Status</h2>
            <p class="text-secondary">Follow each claim from submitted to decision.</p>
            <a class="btn btn-ghost" asp-controller="Claims" asp-action="Status"><i class="bi bi-activity me-1"></i> Open</a>
        </div>
    </div>
</div>
