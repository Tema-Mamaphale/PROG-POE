<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - CMCS</title>

   
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
   
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@500;600;700&family=Dancing+Script:wght@600;700&family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header class="nav-olive">
        <nav class="navbar navbar-expand-lg">
            <div class="container">
                <a class="navbar-brand brand-serif" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-leaf me-2 text-olive"></i>CMCS
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#cmcsNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="cmcsNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Claims" asp-action="Submit">
                                <i class="bi bi-file-earmark-plus me-1 text-olive"></i> Lecturer: Submit
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Claims" asp-action="Review">
                                <i class="bi bi-clipboard-check me-1 text-sage"></i> Coordinator/Manager: Review
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Claims" asp-action="Status">
                                <i class="bi bi-search me-1 text-deep"></i> Track Status
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="container my-4">
        @RenderBody()
    </main>

    <footer class="py-4 mt-5 border-top text-secondary">
        <div class="container small">© @DateTime.Now.Year — CMCS</div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
